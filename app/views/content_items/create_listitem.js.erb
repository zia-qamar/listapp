$('#modal').modal('toggle');
<% unless @content_item.errors.present? %>
$('#list_' + <%= @content_item.list.id %>).find('ul').append("<li class='list-group-item' id='list_item_<%=@content_item.id %>''><%= escape_javascript render(partial: 'content_items/list_item', locals: { list_item: @content_item }) %></li>");
display_success_msg("<%= flash[:notice]%>")
<% else %>
display_error_msg("<%= flash[:notice]%>")
<% end %>